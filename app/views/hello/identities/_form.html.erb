<%= form_for(@identity) do |f| %>
  <%= render '/hello/shared/errors', model: @identity, found_when_msg: "updating your account" %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
