<%= render '/hello/shared/settings' %>

<div class="col-sm-3-offset col-md-2-offset col-sm-9 col-md-10">

<%= form_for [:classic, @credential], html: {class: "form-horizontal", role: "form"} do |f| %>
  <%= render '/hello/shared/errors', model: @credential, found_when_msg: "updating your username" %>

  <div class="form-group">
    <%= f.label :username, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <%= f.submit "Update Username", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
