<%= form_for @forgot_password, as: :forgot_password, url: classic_forgot_password_path, html: {class: "form-horizontal", role: "form"} do |f| %>
  <%= render '/hello/shared/errors', active_model: @forgot_password %>

  <div class="form-group">
    <%= f.label :login, "Email or Username", class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :login, class: "form-control", placeholder: "Email or Username" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <%= f.submit "Reset", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
