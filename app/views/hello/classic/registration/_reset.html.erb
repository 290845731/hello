<%= form_for @reset_password, as: :reset_password, url: reset_password_path, html: {class: "form-horizontal", role: "form"} do |f| %>
  <%= render '/hello/shared/errors', active_model: @reset_password %>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <span class="form-control" style="border: 0px; box-shadow: none">
        <%= @reset_password.credential.email %>
      </span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :username, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <span class="form-control" style="border: 0px; box-shadow: none">
        <%= @reset_password.credential.username %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <%= f.submit "Save", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
