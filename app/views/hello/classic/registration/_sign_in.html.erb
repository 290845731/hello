<%= form_for @sign_in, as: :sign_in, url: classic_sign_in_path, html: {class: "form-horizontal", role: "form"} do |f| %>
  <%= render '/hello/shared/errors', active_model: @sign_in %>

  <div class="form-group">
    <%= f.label :login, "Email or Username", class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :login, class: "form-control", placeholder: "Email or Username" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :password, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <div class="checkbox">
        <label>
          <%= check_box_tag :keep_me, '1', false %>
          Keep me signed in for <strong>30</strong> days
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <%= f.submit "Sign In", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
