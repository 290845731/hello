<%= render '/hello/shared/profile' %>

<h1>New identity</h1>

<%= form_for(@classic_identity) do |f| %>
  <%= render '/hello/shared/errors', model: @classic_identity, found_when_msg: "creating your identity" %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

