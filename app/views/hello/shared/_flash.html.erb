<%# send email confirmation %>
<% if hello_credential && hello_credential.show_alert_for_email_confirmation_suggestion? %>
  <div class="alert alert-info">
    <% scope = "hello.messages.classic.registration.send_confirmation" %>
    <%= t("info1", scope: scope, email: hello_credential.email) %>
    <%= link_to t("info2", scope: scope), hello.classic_confirm_email_send_path %>
  </div>
<% end %>

<%# click email confirmation on your email %>
<% if hello_credential && hello_credential.show_alert_for_email_confirmation_pending? %>
  <div class="alert alert-info">
    <% scope = "hello.messages.classic.registration.confirm_email" %>
    <%= t("info", scope: scope, email: hello_credential.email) %>
  </div>
<% end %>


<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<% if alert %>
  <div class="alert alert-warning"><%= alert %></div>
<% end %>
