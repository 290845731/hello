<h2 class="page-header">Settings</h2>

<div class="col-sm-3 col-md-2">
<div class="list-group">
  <%= active_link_to "Profile", hello.user_path, class: "list-group-item" %>

  <% current_user.classic_credential.tap do |c| %>
    <%= active_link_to "Email",    email_classic_credential_path(c),    class: "list-group-item" %>
    <%= active_link_to "Username", username_classic_credential_path(c), class: "list-group-item" %>
    <%= active_link_to "Password", password_classic_credential_path(c), class: "list-group-item" %>
    <%= active_link_to "Confirm Email", confirm_credential_path(c),     class: "list-group-item" unless c.email_confirmed? %>
    <%#= active_link_to 'Add Email', hello.new_credential_path, class: "list-group-item" %>
  <% end %>

  <%= active_link_to "Access Tokens (#{current_user.access_tokens_count})", hello.access_tokens_path, class: "list-group-item" %>
  <%= active_link_to "Cancel Account", hello.deactivation_path, class: "list-group-item" %>
</div>
</div>
