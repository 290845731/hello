<div class="row">

<%= render '/hello/shared/settings' %>

<div class="col-sm-3-offset col-md-2-offset col-sm-9 col-md-10">

<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Device</th>
      <th>IP Address</th>
      <th></th>
    </tr>
  </thead>
  <tbody>


    <% @access_tokens.each_with_index do |atoken, i| %>

      <tr class="<%= 'success' if is_current_access_token? atoken %>">
        <td>Device #<%= i+1 %></td>
        <td><%= atoken.full_device_name %></td>
        <td><%= atoken.ip %></td>
        <td>
          <% if is_current_access_token? atoken %>
            [this device]
          <% else %>
            <%= button_to 'Unlink',
                          atoken,
                          method: :delete,
                          class: 'btn btn-danger',
                          data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>


    <% end %>


  </tbody>
</table>

</div>
</div>